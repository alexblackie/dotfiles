[user]
	name = Alex Blackie
	email = alex@alexblackie.com
	signingKey = 62C52F68363447D971C629EDA231E0F2D35D0D47

[core]
	fileMode = false
	commitGraph = true

[include]
	; Support changing some gitconfig settings locally. Useful for work
	; computers where GPG key IDs or email addresses can be different.
	path = ./local

[init]
	defaultBranch = main

[alias]
	aa = add --all
	br = branch
	ci = commit
	dc = diff --cached
	df = diff
	ff = "!sh -c 'git commit --fixup=`git lg -l 10 | fzy | cut -f2 -d\\ `'"
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	pu = push -u
	p = push
	st = status
	sta = stash
	sl = stash list
	sa = stash pop
	tlog = "!sh -c 'git log master...`git rev-parse --abbrev-ref HEAD` --pretty=oneline --abbrev-commit' -"
	tdf = diff master...HEAD

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow
	frag = magenta
	old = red
	new = green

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[diff]
	tool = vimdiff
	prompt = false
	algorithm = patience

[merge]
	log = true
	ff = false

[rerere]
	enabled = 1

[diff "exif"]
	textconv = exiftool

[push]
	default = simple

[branch]
	autosetuprebase = always
[pull]
	rebase = true
