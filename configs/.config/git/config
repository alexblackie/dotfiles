[user]
	name = Alex Blackie
	email = alex@blackie.me
	signingKey = 62C52F68363447D971C629EDA231E0F2D35D0D47

[core]
	commitGraph = true

[include]
	; Support changing some gitconfig settings locally. Useful for work
	; computers where GPG key IDs or email addresses can be different.
	path = ./local

[init]
	defaultBranch = main

[alias]
	aa = add --all
	br = branch
	co = checkout
	ci = commit
	df = diff
	dc = diff --cached
	ff = "!sh -c 'git commit --fixup=`git log --pretty=oneline --abbrev-commit -l 10 | fzy | cut -f1 -d\\ `'"
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	st = status
	yolo = push --force-with-lease

[commit]
	verbose = true
	template = ~/.config/git/template

[diff]
	algorithm = patience

[rerere]
	enabled = 1

[branch]
	autoSetupRebase = always

[pull]
	rebase = true

[rebase]
	autostash = true

[credential]
	helper = store
