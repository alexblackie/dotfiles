[user]
	name = Alex Blackie
	email = alex@alexblackie.com
	signingKey = 62C52F68363447D971C629EDA231E0F2D35D0D47

[core]
	fileMode = false
	commitGraph = true

[include]
	; Support changing some gitconfig settings locally. Useful for work
	; computers where GPG key IDs or email addresses can be different.
	path = ./local

[init]
	defaultBranch = main

[alias]
	st = status
	co = checkout
	ciff = diff --cached
	yolo = push --force-with-lease
	fixup = "!sh -c 'git commit --fixup=`git log --pretty=oneline --abbrev-commit -l 10 | fzy | cut -f1 -d\\ `'"
	slog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'

[color "diff"]
	meta = yellow
	frag = magenta
	old = red
	new = green

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[commit]
	verbose = true
	template = ~/.config/git/template

[diff]
	algorithm = patience

[rerere]
	enabled = 1

[branch]
	autoSetupRebase = always

[pull]
	rebase = true
