# Aliases
# ----------------------------------------

alias ls="ls -Gp"
alias la="ls -a"
alias ll="ls -lh"

alias g="git"

alias be="bundle exec"
alias rake="bundle exec rake"
alias bems='bundle exec middleman server'
alias fr='foreman run'

alias fucking='sudo'
alias :wq='exit'
alias :q='exit'

# Libraries/Imports
# ----------------------------------------
[[ -s ~/.nvm/nvm.sh ]] && . ~/.nvm/nvm.sh

export RBENV_ROOT="${HOME}/.rbenv"
if [ -d "${RBENV_ROOT}" ]; then
  export PATH="${RBENV_ROOT}/bin:${PATH}"
  eval "$(rbenv init -)"
fi

if [ -f ~/.env ]; then
  source ~/.env
fi

export EDITOR="vim"

setxkbmap -option caps:escape # Fucking capslock is bullshit
