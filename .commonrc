# Aliases
# ----------------------------------------

alias ls="ls -Gp"
alias la="ls -a"
alias ll="ls -lh"

alias g="git"

alias be="bundle exec"
alias rake="bundle exec rake"
alias bems='bundle exec middleman server'
alias fr='foreman run'

alias fucking='sudo'
alias :wq='exit'
alias :q='exit'
alias yolo='git push -f origin'

# Libraries/Imports
# ----------------------------------------
[[ -s ~/.nvm/nvm.sh ]] && . ~/.nvm/nvm.sh

if [ -f ~/.env ]; then
  source ~/.env
fi

export EDITOR="vim"

export CHRUBY_ROOT="/usr/local/share/chruby"
if [ -d "${CHRUBY_ROOT}" ]; then
  source "$CHRUBY_ROOT/chruby.sh"
  source "$CHRUBY_ROOT/auto.sh"
fi

setxkbmap -option caps:escape # Fucking capslock is bullshit
