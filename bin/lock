#!/bin/bash

# Slightly modified version of https://github.com/meskarune/i3lock-fancy/
# Mostly because I don't want the AUR dependency

# TODO: Currently doesn't work very well at all with multiple monitors.

IMAGE=/tmp/i3lock.png
BLURTYPE="8x8"

scrot $IMAGE
convert $IMAGE -level 0%,100%,0.6 -blur $BLURTYPE -font Liberation-Sans -pointsize 26 -fill white -gravity center -annotate +0+200 'Type password to unlock' - | composite -gravity center $HOME/bin/lock.png - $IMAGE
i3lock -i $IMAGE
rm $IMAGE
