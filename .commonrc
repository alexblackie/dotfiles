# Aliases
# ----------------------------------------

alias ls='ls -Gp'
alias l='ls'
alias la='ls -a'
alias ll='ls -lh'
alias lal='ls -al'

alias g='git'
alias v='vim'
alias gv='gvim'

alias be='bundle exec'
alias ann='bundle exec annotate'
alias bems='bundle exec middleman server'
alias befs='bundle exec foreman start'
alias fr='bundle exec foreman run'

alias :wq='exit'
alias :q='exit'
alias yolo='git push -f origin'


# Libraries/Imports
# ----------------------------------------
[[ -s ~/.nvm/nvm.sh ]] && . ~/.nvm/nvm.sh

if [ -f ~/.env ]; then
  source ~/.env
fi

export EDITOR='vim'

export CHRUBY_ROOT='/usr/local/share/chruby'
if [ -d "${CHRUBY_ROOT}" ]; then
  source "$CHRUBY_ROOT/chruby.sh"
  source "$CHRUBY_ROOT/auto.sh"
fi
